<UserControl 
    x:Class="Fund.MemberCreateUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:enum="clr-namespace:Models;assembly=Models"
    xmlns:local="clr-namespace:Fund"
    mc:Ignorable="d" 
    Style="{DynamicResource UserControlStyle}"
    Loaded="userControlLoaded"
    >

    <UserControl.Resources>
        <Style x:Key="StarsStyle" TargetType="{x:Type Label}">
            <Setter Property="Content" Value="*"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="TextBlock.Foreground" Value="Red"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Grid.Column" Value="3"/>
        </Style>
        <Style x:Key="TextBlocksStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="5,0,0,5"/>
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="FlowDirection" Value="RightToLeft"/>
        </Style>
        <Style x:Key="TextBoxesStyle" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="FlowDirection" Value="RightToLeft"/>
            <Setter Property="Grid.Column" Value="2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Text" Value="{x:Null}"/>
            <Setter Property="Margin" Value="5,0,0,5"/>
        </Style>
        <Style x:Key="TextEditsStyle" TargetType="{x:Type dxe:TextEdit}">
            <Setter Property="Grid.Column" Value="2"/>
            <Setter Property="Margin" Value="5,0,0,5"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
            <Setter Property="FontFamily" Value="{StaticResource EnGlobalFontFamily}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MaskType" Value="RegEx"/>
            <Setter Property="EditValue" Value="{Binding Path=Value}"/>
        </Style>
    </UserControl.Resources>    
    
    
    <Grid>
        <Grid HorizontalAlignment="Stretch" Height="40" Margin="10,10,10,0" VerticalAlignment="Top" Width="auto">
            <TextBlock x:Name="textBlock" Margin="0" TextWrapping="Wrap" FontWeight="Bold" FontSize="20"><Run FlowDirection="RightToLeft" Text="ایجاد عضو جدید"/></TextBlock>
        </Grid>

        <Grid Margin="10,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="firstNameTextBlock" Grid.Row="1" Text="نام :" Style="{DynamicResource TextBlocksStyle}"/>
            
            <TextBox x:Name="firstNameTextBox" Grid.Row="1" Style="{DynamicResource TextBoxesStyle}"/>
            
            <Label Grid.Row="1" Style="{DynamicResource StarsStyle}"/>

            <TextBlock x:Name="lastNameTextBlock" Grid.Row="2" Text="نام خانوادگی :" Style="{DynamicResource TextBlocksStyle}"/>
            
            <TextBox x:Name="lastNameTextBox" Grid.Row="2" Style="{DynamicResource TextBoxesStyle}"/>
            
            <Label Grid.Row="2" Style="{DynamicResource StarsStyle}"/>
            
            <TextBlock x:Name="fatherNameTextBlock" Grid.Row="3" Text="نام پدر :" Style="{DynamicResource TextBlocksStyle}"/>
            
            <TextBox x:Name="fatherNameTextBox" Grid.Row="3" Style="{DynamicResource TextBoxesStyle}"/>
            
            <Label Grid.Row="3" Style="{DynamicResource StarsStyle}"/>
             
            <TextBlock x:Name="nationalCodeTextBlock" Grid.Row="5" Text="کد ملی :" Style="{DynamicResource TextBlocksStyle}"/>
            
            <dxe:TextEdit Name="nationalCodeTextBox" Grid.Row="5" Mask="\d{10}" Style="{DynamicResource TextEditsStyle}" FontFamily="{DynamicResource FaGlobalFontFamily}"/>
            
            <Label Grid.Row="5" Style="{DynamicResource StarsStyle}"/>
            
            <TextBlock x:Name="genderTextBlock" Grid.Row="6" Text="جنسیت :" Style="{DynamicResource TextBlocksStyle}"/>

            <dxe:ComboBoxEdit Name="GendersCombobox" Grid.Row="6" Grid.Column="2" Margin="5,0,0,0" SelectedIndex="0" IsTextEditable="False" ApplyItemTemplateToSelectedItem="True" >
                <dxe:ComboBoxEdit.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0" Background="Transparent" Height="26">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="26"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image Grid.Column="1" HorizontalAlignment="Stretch"  Source="{Binding GenderLogo}" VerticalAlignment="Center"/>
                                <Label Grid.Column="2" Content=" - " VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Label Grid.Column="3" FontWeight="Bold" FontSize="16" Content="{Binding GenderString}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </dxe:ComboBoxEdit.ItemTemplate>
            </dxe:ComboBoxEdit>
            
            <TextBlock x:Name="phoneNumberTextBlock" Grid.Row="8" Text="شماره تلفن همراه :" Style="{DynamicResource TextBlocksStyle}"/>
            <dxe:TextEdit Name="phoneNumberTextBox" Grid.Row="8" Mask="\d{11}" Style="{DynamicResource TextEditsStyle}" FontFamily="{DynamicResource FaGlobalFontFamily}" />
            <Label Grid.Row="8" Style="{DynamicResource StarsStyle}"/>
            
            <TextBlock x:Name="emailTextBlock" Grid.Row="9" Text="پست الکترونیکی :" Style="{DynamicResource TextBlocksStyle}"/>
            <dxe:TextEdit Name="emailAddressTextBox" Grid.Row="9" Mask="\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*" Style="{DynamicResource TextEditsStyle}"/>
            <Label Grid.Row="9" Style="{DynamicResource StarsStyle}"/>
     
            <StackPanel Orientation="Horizontal"  Grid.Column="4" Grid.RowSpan="9" Width="240" Height="260" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
                <Image Name="MemberImage" Stretch="Fill"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="240" Height="260" >
                    <Image.Source>
                        <Binding>
                            <Binding.TargetNullValue>
                                <ImageSource>/Fund;component/Resources/Images/MemberPicture.png</ImageSource>
                            </Binding.TargetNullValue>
                        </Binding>
                    </Image.Source>
                </Image>
            </StackPanel>

            <Grid Grid.Column="4" Grid.Row="9" HorizontalAlignment="Left" Width="240">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <dx:SimpleButton Name="PickImageButton" Grid.Column="0" Content="انتخاب عکس" Height="auto" Width="auto" FontWeight="Bold" Margin="3" HorizontalAlignment="Stretch" Click="PickImageButton_Click"/>
                
                <dx:SimpleButton Name="DeleteImageButton" Grid.Column="1" Content="حذف عکس" Height="auto" Width="auto" FontWeight="Bold" Margin="3" HorizontalAlignment="Stretch" Click="DeleteImageButton_Click"/>
           
            </Grid>

        </Grid>

        <Grid Height="40" Margin="10,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Width="auto">
            <dx:SimpleButton x:Name="CloseButton" Content="بستن" Height="32" Width="90" FontWeight="Bold" TabIndex="8" IsCancel="True" Margin="0,4,100,4" HorizontalAlignment="Right" Click="CloseButton_Click" />
            <dx:SimpleButton x:Name="AcceptButton" Content="تایید" Height="32" Width="90" FontWeight="Bold" TabIndex="7" IsDefault="True" Margin="0,0,3,0" HorizontalAlignment="Right" Click="AcceptButton_Click"/>
            <TextBlock x:Name="textBlock_Copy9" TextWrapping="Wrap" Text="تکمیل فیلد‌های ستاره‌دار (*) الزامی می‌باشد" TextAlignment="Left" TextBlock.Foreground="Red" Padding="3" FontWeight="Bold" FontSize="14" Margin="10,4,195,4"/>
        </Grid>
    </Grid>
</UserControl>
