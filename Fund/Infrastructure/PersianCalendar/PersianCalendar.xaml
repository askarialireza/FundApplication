    <UserControl.Resources>

        <!--
        برای نام روزها ، شنبه ، یک شنبه 
        اولین ردیف از بالا
        -->
        <Style x:Key="RectangleStyle1" TargetType="{x:Type Rectangle}">
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox" >
                        <GradientStop Color="#FFE1EDFA" Offset="0"/>
                        <GradientStop Color="#FFD1E0EF" Offset="0.5"/>
                        <GradientStop Color="#FFF3F8FE" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RadiusX" Value="4"/>
            <Setter Property="RadiusY" Value="4"/>
            <Setter Property="Stroke" Value="#FF94ADCC"/>
            <Setter Property="StrokeThickness" Value="0.5"/>
        </Style>

        <!-- برای روزهای ماه جاری -->
        <Style x:Key="RectangleStyle2" TargetType="{x:Type Rectangle}">
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox" >
