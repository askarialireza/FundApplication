            <Setter Property="BitmapEffect">
                <Setter.Value>
                    <BlurBitmapEffect Radius="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- برای تاریخ قمری ماه جاری -->
        <Style x:Key="TextBlockStyle10" TargetType="{x:Type TextBlock}">
