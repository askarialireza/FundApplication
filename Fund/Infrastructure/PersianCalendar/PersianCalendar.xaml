            <Setter Property="BitmapEffect">
                <Setter.Value>
                    <BlurBitmapEffect Radius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  برای روزهای تعطیل  ماه جاری -->
        <Style x:Key="TextBlockStyle3" TargetType="{x:Type TextBlock}">
