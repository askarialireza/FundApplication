        </Setter>
        <Setter Property="RadiusX" Value="4"/>
        <Setter Property="RadiusY" Value="4"/>
        <Setter Property="Stroke" Value="#FF94ADCC"/>
        <Setter Property="StrokeThickness" Value="0.5"/>
