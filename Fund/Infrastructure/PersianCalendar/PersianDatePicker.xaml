                </Grid>
            </UniformGrid>
            <!-- *********************************************************** -->
            <Grid x:Name="Footer" Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="goToToday" Grid.Column="1" FontSize="15"  FontWeight="Bold"  Content="امروز" VerticalAlignment="Top" Click="goToToday_Click" Height="28"  />
            </Grid>

        </StackPanel>
    </Grid>

</UserControl>
